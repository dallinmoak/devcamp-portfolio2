<div class='app-card-container'>
  <div class='card'>
    <h1>About Me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "about_pic.jpg", width: 300, alt: "profile pic" %>
        <div class='skills'>
          <% @skills.each do |skill| %> 
            <div class='skill'>
              <h4><%= skill.title %></h4>
              <div class='progress'>
                <div class='progress-bar progress-bar-striped bg-warning' role='progressbar' aria-valuenow='<%= skill.percent_used %>' aria-valuemax='100' style='width: <%= skill.percent_used %>%'>
                  <%= skill.percent_used %>% 
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-8">
        <p>Here is some info about me.</p>
        <p>Here is some more</p>
        <button
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#jobHistory"
          aria-expanded="false"
          aria-controls="jobHistory"
        >
          Job History
        </button>

        <button
          class="btn btn-primary"
          type="button"
          data-toggle="collapse"
          data-target="#education"
          aria-expanded="false"
          aria-controls="education"
        >        
          education
        </button>

        <div class='collapse' id='education'>
          <div class="card card-body resume-item">
            school 1
          </div>
          <div class="card card-body resume-item">
            school 2
          </div>
          <div class="card card-body resume-item">
            school 3
          </div>
        </div>

        <div class='collapse' id='jobHistory'>
          <div class="card card-body resume-item">
            my jobs
          </div>
          <div class="card card-body resume-item">
            my jobs
          </div>
          <div class="card card-body resume-item">
            my jobs
          </div>
        </div>

      </div>
    </div>
  </div>
</div>



