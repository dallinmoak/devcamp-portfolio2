<div class="col-sm-8 blog-main">

  <nav aria-label="breadcrumb">
    <div class="breadcrumb">
      <%= link_to "Home", root_path, class: "breadcrumb-item"%>
      <%= link_to @blog.topic.title, topic_path(@blog.topic), class: "breadcrumb-item"%>
      <span class="breadcrumb-item active" aria-current="page"><%= @blog.title %></span>
      <span class="pull-right">
        <%= link_to fa_icon('pencil-square-o'), edit_blog_path if logged_in?(:site_admin) %>
        <%= link_to fa_icon('trash'), @blog, method: :delete, data: {confirm: "u sure, bro?"} if logged_in?(:site_admin) %>
      </span>
    </div>
  </nav>

  <h2><%= @blog.title %></h2>

  <p>
    <% if @blog.topic%>
      <%= @blog.topic.title%>
    <%end%>
  </p>

  <p>
    <%= markdown @blog.body %>
  </p>

  <%= render 'comments/comment_form' %>
  <div id='comments' data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
</div>
