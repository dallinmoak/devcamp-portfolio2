<div class='comment-card'>
    <div class='card'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-md-1 comment-img'>
           <%= gravatar_helper comment.user %>
          </div>

          <div class='col-md-11'>
            <div>
              <%= comment.content %> 
            </div>
            <div class="comment-post-meta">
              posted by <%= current_user.name %> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
