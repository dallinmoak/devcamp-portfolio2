<div class="row">
  <div class="col-md-6">
    <%= form_with(model: portfolio_item, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :portfolio_title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :portfolio_subtitle, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :portfolio_body, class: "form-control" %>
      </div>
  </div>
  <div class="col-md-6">
    <h2>Technologies</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: "form-control" %>
      </div>
    <% end %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= form.submit 'Save', class:"btn btn-primary btn-block"  %>
    </div>
  <% end %>
  </div>

</div>
