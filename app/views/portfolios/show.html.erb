<div class="containter portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <h3><%= @portfolio_item.subtitle %></h3>
      <hr>
      <p><%= @portfolio_item.body %></p>
      <hr>
      <h2>Technologies Used </h2>
      <% @portfolio_item.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>
      <hr>
      <% if logged_in?(:site_admin)%>
        <div class='col-md-12'>
          <%= link_to "edit", edit_portfolio_path(@portfolio_item), class: "btn btn-warning" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
